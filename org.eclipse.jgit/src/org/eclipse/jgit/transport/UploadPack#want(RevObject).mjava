	private void want(RevObject o) {
		if (!o.has(WANT)) {
			o.add(WANT);
			wantAll.add(o);

			if (o instanceof RevCommit)
				wantCommits.add((RevCommit) o);

			else if (o instanceof RevTag) {
				do {
					o = ((RevTag) o).getObject();
				} while (o instanceof RevTag);
				if (o instanceof RevCommit)
					want(o);
			}
		}
	}

