	/**
	 * @param message
	 * @param ref
	 * @param rc
	 */
	public ConcurrentRefUpdateException(String message, Ref ref,
			RefUpdate.Result rc) {
		super((rc == null) ? message : message + ". " //$NON-NLS-1$
				+ MessageFormat.format(JGitText.get().refUpdateReturnCodeWas, rc));
		this.rc = rc;
		this.ref = ref;
	}

