	/**
	 * @param message
	 * @param ref
	 * @param rc
	 * @param cause
	 */
	public ConcurrentRefUpdateException(String message, Ref ref,
			RefUpdate.Result rc, Throwable cause) {
		super((rc == null) ? message : message + ". "
				+ MessageFormat.format(JGitText.get().refUpdateReturnCodeWas, rc), cause);
		this.rc = rc;
		this.ref = ref;
	}

