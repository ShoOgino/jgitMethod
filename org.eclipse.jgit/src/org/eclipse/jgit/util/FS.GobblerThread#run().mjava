		public void run() {
			StringBuilder err = new StringBuilder();
			try (InputStream is = p.getErrorStream()) {
				int ch;
				while ((ch = is.read()) != -1) {
					err.append((char) ch);
				}
			} catch (IOException e) {
				if (p.exitValue() != 0) {
					logError(e);
					fail.set(true);
				} else {
					// ignore. git terminated faster and stream was just closed
				}
			} finally {
				if (err.length() > 0) {
					LOG.error(err.toString());
				}
			}
		}

