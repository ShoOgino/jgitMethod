		public void run() {
			InputStream is = p.getErrorStream();
			try {
				int ch;
				if (debug) {
					while ((ch = is.read()) != -1) {
						System.err.print((char) ch);
					}
				} else {
					while (is.read() != -1) {
						// ignore
					}
				}
			} catch (IOException e) {
				logError(e);
				fail.set(true);
			}
			try {
				is.close();
			} catch (IOException e) {
				logError(e);
				fail.set(true);
			}
		}

