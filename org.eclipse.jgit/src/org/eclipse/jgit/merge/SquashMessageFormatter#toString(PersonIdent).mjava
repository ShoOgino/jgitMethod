	private String toString(PersonIdent author) {
		final StringBuilder a = new StringBuilder();

		a.append("Author: ");
		a.append(author.getName());
		a.append(" <");
		a.append(author.getEmailAddress());
		a.append(">\n");
		a.append("Date:   ");
		a.append(dateFormatter.formatDate(author));
		a.append("\n");

		return a.toString();
	}

