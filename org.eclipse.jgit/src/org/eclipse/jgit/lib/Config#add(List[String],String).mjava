	private static List<String> add(final List<String> curr, final String value) {
		if (curr == null)
			return Collections.singletonList(value);
		if (curr.size() == 1) {
			final List<String> r = new ArrayList<String>(2);
			r.add(curr.get(0));
			r.add(value);
			return r;
		}
		curr.add(value);
		return curr;
	}

