	/**
	 * Create a new non-comment line
	 *
	 * @param action
	 * @param commit
	 * @param shortMessage
	 */
	public RebaseTodoLine(Action action, AbbreviatedObjectId commit,
			String shortMessage) {
		this.action = action;
		this.commit = commit;
		this.shortMessage = shortMessage;
		this.comment = null;
	}

