	/**
	 * Create a new ref pairing.
	 *
	 * @param st
	 *            method used to store this ref.
	 * @param name
	 *            name of this ref.
	 * @param id
	 *            current value of the ref. May be null to indicate a ref that
	 *            does not exist yet.
	 */
	protected ObjectIdRef(Storage st, String name, ObjectId id) {
		this.name = name;
		this.storage = st;
		this.objectId = id;
	}

