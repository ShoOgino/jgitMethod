	/**
	 * @param out
	 *            the output stream
	 * @param id
	 *            the object id to serialize
	 * @throws IOException
	 *             the stream writing failed
	 */
	public static void write(OutputStream out, @Nullable AnyObjectId id)
			throws IOException {
		if (id != null) {
			out.write((byte) 1);
			id.copyRawTo(out);
		} else {
			out.write((byte) 0);
		}
	}

