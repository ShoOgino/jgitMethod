	/**
	 * Format for Git storage.
	 *
	 * @return a string in the git author format
	 */
	public String toExternalString() {
		final StringBuilder r = new StringBuilder();
		r.append(getName().trim());
		r.append(" <"); //$NON-NLS-1$
		r.append(getEmailAddress().trim());
		r.append("> "); //$NON-NLS-1$
		r.append(when / 1000);
		r.append(' ');
		appendTimezone(r);
		return r.toString();
	}

