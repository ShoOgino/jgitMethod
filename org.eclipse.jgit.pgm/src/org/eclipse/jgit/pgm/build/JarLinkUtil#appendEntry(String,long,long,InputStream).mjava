	private void appendEntry(final String name, final long len,
			final long time, final InputStream is) throws IOException {
		final ZipEntry ze = new ZipEntry(name);
		ze.setSize(len);
		ze.setTime(time);
		zos.putNextEntry(ze);
		try {
			final byte[] buf = new byte[4096];
			int n;
			while ((n = is.read(buf)) >= 0)
				zos.write(buf, 0, n);
		} finally {
			is.close();
		}
		zos.closeEntry();
	}

