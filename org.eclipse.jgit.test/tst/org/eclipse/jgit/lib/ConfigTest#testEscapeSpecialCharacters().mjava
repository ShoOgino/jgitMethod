	@Test
	public void testEscapeSpecialCharacters() throws ConfigInvalidException {
		assertValueRoundTrip("x#y", "\"x#y\"");
		assertValueRoundTrip("x;y", "\"x;y\"");
		assertValueRoundTrip("x\\y", "\"x\\\\y\"");
		assertValueRoundTrip("x\"y", "\"x\\\"y\"");
		assertValueRoundTrip("x\ny", "\"x\\ny\"");
		assertValueRoundTrip("x\ty", "\"x\\ty\"");
		assertValueRoundTrip("x\by", "\"x\\by\"");
	}

