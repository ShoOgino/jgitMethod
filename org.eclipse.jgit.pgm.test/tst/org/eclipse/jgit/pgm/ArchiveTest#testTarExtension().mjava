	@Test
	public void testTarExtension() throws Exception {
		final File archive = new File(db.getWorkTree(), "tarball.tar");
		final String path = archive.getAbsolutePath();

		commitGreeting();
		assertArrayEquals(new String[] { "" },
				execute("git archive " +
					shellQuote("--output=" + path) + " " +
					"HEAD"));
		assertIsTar(archive);
	}

